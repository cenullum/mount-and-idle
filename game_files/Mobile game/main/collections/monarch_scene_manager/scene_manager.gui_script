local monarch = require "monarch.monarch"

function init(self)
    msg.post(".", "acquire_input_focus")
    monarch.debug()
    msg.post("#","init_monarch")
   
end

function final(self)
end

function update(self, dt)
end

function on_message(self, message_id, message, sender)
    if message_id == hash("init_monarch") then
        monarch.show("main_menu")
        print("main_menu")
    elseif message_id == hash("gameplay_menu") then
        monarch.show("gameplay_menu")
        print("gameplay_menu")
    elseif message_id == hash("map_menu") then
        monarch.show("map_menu")
        print("map_menu")
    elseif message_id == hash("back") then
        monarch.back()
    end
end

function on_input(self, action_id, action)
end

function on_reload(self)
end
